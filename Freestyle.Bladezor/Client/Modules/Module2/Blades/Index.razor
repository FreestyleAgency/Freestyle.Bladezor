@page "/module2/stack/{StackId:int}"
@layout StackLayout
@inject INavigationState NavigationState
@inherits BladeBase

<div class="pf-c-page__main-section pf-m-light">
	<Content>
		<p>This is the default blade for this stack.</p>
		<p><BladeLink Url="/module1/stack/1/list" BladeTitle="Example list blade" BladeSubtitle="Launches detail blades while remaining visible">Push list blade</BladeLink></p>
		<p><BladeLink Url="/module1/stack/1/list/detail" BladeTitle="Example detail blade">Push detail blade</BladeLink></p>
		<p><BladeLink Url="/common/iframe" BladeTitle="Example iframe" BladeSubtitle="You can have anything you like here">Push iframe</BladeLink></p>
		<p><BladeLink Url="/counter" BladeTitle="Example page" BladeSubtitle="This example came with the Blazor starter">Push page</BladeLink></p>
		<p><BladeButton Url="/counter" BladeTitle="Example page" BladeSubtitle="This example came with the Blazor starter" Text="Push page" /></p>
		<p><HelpLink Url="/Help/Portal/Index.md">This will open the help drawer.</HelpLink></p>
	</Content>
</div>

@code {
	[Parameter]
	public int StackId { get; set; }

	protected override void OnParametersSet()
	{
		Title = $"Stack {StackId}";
		Subtitle = "Just an example";

		base.OnParametersSet();
	}
}
